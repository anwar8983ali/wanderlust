<% layout('layouts/boilerPlate') %>

<div class="row mt-3">
  <div class="col- 6 offset-3">
    <h3>SignUp On WanderLust</h3>
         <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username:</label>
                <input name="username" id="username" placeholder="Add username" type="text" class="form-control" required/>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email:</label>
                <input name="email" id="email" placeholder="Add email" type="text" class="form-control" required/>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password:</label>
                <input name="password" id="password" placeholder="Add password" type="password" class="form-control" required/>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <button class="btn btn-success">SignUp</button>

         </form>
  </div>
</div>
